{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row the-space-beneath">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="section-content">
                    <h2>{{ project.name }} Details</h2>
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <h4>Velocity</h4>
                                <p class="statistic">{{ project.current_velocity }}</p>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <h4>Volatility</h4>
                                <p class="statistic">{{ project.current_volatility }}%</p>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <h4>Point Scale</h4>
                                <p class="statistic">{{ project.point_scale }}</p>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <h4>No. of Iterations</h4>
                                <p class="statistic">{{ project.current_iteration_number }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Start Recent Iterations Area -->
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="basic-tb-hd">
                            <h2>Recent Iterations</h2>
                        </div>
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Iteration</th>
                                        <th>Velocity</th>
                                        <th>Accepted Points</th>
                                        <th>Team Strength</th>
                                        <th>Effective Points</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for iteration in iterations %}
                                        <tr>
                                            <td><a href="/project/{{ project.id }}/iteration/{{ iteration.number }}/">{{ iteration.start|date("m/d/Y") }} - {{ iteration.finish|date("m/d/Y") }}</a></td>
                                            <td>{{ iteration.velocity }}</td>
                                            <td>{{ iteration.accepted_points }}</td>
                                            <td>{{ (iteration.team_strength * 100)|number_format(2) }}%</td>
                                            <td>{{ iteration.effective_points|number_format(2) }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Recent Iterations Area -->
{% endblock %}