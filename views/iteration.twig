<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Current Pivotal Work</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
        <link rel="stylesheet" href="/css/index.css">
        <meta http-equiv="refresh" content="60" />
    </head>
    <body>
        <p>Start: {{ iteration.start|date("m/d/Y") }}</p>
        <p>Finish: {{ iteration.finish|date("m/d/Y") }}</p>
        <p>Velocity: {{ iteration.velocity }}</p>
        <p>Accepted Points: {{ iteration.accepted_points }}</p>
        <p>Team Strength: {{ (iteration.team_strength * 100)|number_format(2) }}</p>
        <p>Effective Points: {{ iteration.effective_points|number_format(2) }}</p>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Bugs</th>
                    <th>Features</th>
                    <th>Chores</th>
                    <th>Points</th>
                </tr>
            </thead>
            <tbody>
                {% for result_per_person in results_per_person %}
                    <tr>
                        <td>{{ result_per_person.name }}</td>
                        <td>{{ result_per_person.bugs }}</td>
                        <td>{{ result_per_person.features }}</td>
                        <td>{{ result_per_person.chores }}</td>
                        <td>{{ result_per_person.points }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    </body>
</html>